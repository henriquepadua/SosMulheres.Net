@model SOSMulheres.Models.Relatos

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/styleRelatos.css" asp-append-version="true" />
</head>

<h1>Criar</h1>

<h4>Relato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataOcorrido" class="control-label"></label>
                <input asp-for="DataOcorrido" class="form-control" />
                <span asp-validation-for="DataOcorrido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Relato" class="control-label"></label>
                <input asp-for="Relato" class="form-control" />
                <span asp-validation-for="Relato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista de relatos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
