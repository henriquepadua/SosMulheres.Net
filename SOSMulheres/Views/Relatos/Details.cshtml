@model SOSMulheres.Models.Relatos

@{
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" href="~/css/styleRelatos.css" asp-append-version="true" />
</head>

<h1>Detalhes</h1>

<div>
    <h4>Relato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataOcorrido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataOcorrido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Relato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Relato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
